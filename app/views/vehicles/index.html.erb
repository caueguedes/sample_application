<h1>Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>Model year</th>
      <th>Gear</th>
      <th>Doors</th>
      <th>Fuel</th>
      <th>Color</th>
      <th>Air</th>
      <th>Sound system</th>
      <th>Air</th>
      <th>Airbags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.name %></td>
        <td><%= vehicle.brand %></td>
        <td><%= vehicle.model_year %></td>
        <td><%= vehicle.gear %></td>
        <td><%= vehicle.doors %></td>
        <td><%= vehicle.fuel %></td>
        <td><%= vehicle.color %></td>
        <td><%= vehicle.air %></td>
        <td><%= vehicle.sound_system %></td>
        <td><%= vehicle.air %></td>
        <td><%= vehicle.airbags %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

